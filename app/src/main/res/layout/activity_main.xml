<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <com.github.gfranks.expandable.view.ExpandableView
                android:id="@+id/expandable_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:headerLayout="@layout/layout_expandable_view_header"
                app:contentLayout="@layout/layout_expandable_view_content"
                app:footerLayout="@layout/layout_expandable_view_footer"
                app:collapsedContentHeight="50dp"
                app:addGradientOverlayWhenCollapsed="true"
                app:gradientOverlayColor="@color/theme_red"
                app:animationDuration="200" />

            <com.github.gfranks.expandable.view.ExpandableView
                android:id="@+id/expandable_view_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:headerLayout="@layout/layout_expandable_view_header_2"
                app:contentLayout="@layout/layout_expandable_view_content"
                app:collapsedContentHeight="50dp"
                app:addGradientOverlayWhenCollapsed="true"
                app:gradientOverlayColor="@color/theme_white"
                app:animationDuration="200" />

            <com.github.gfranks.expandable.view.ExpandableView
                android:id="@+id/expandable_view_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:headerLayout="@layout/layout_expandable_view_header_3"
                app:contentLayout="@layout/layout_expandable_view_content"
                app:collapseOnContentClick="true"
                app:animationDuration="200" />

            <com.github.gfranks.expandable.view.ExpandableView
                android:id="@+id/expandable_view_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                app:animationDuration="200">

                <include layout="@layout/layout_expandable_view_header_4" />

                <FrameLayout
                    android:id="@+id/expandable_view_4_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.github.gfranks.expandable.view.ExpandableView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>